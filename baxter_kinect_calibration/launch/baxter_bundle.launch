<launch>
	<arg name="marker_size" default="4.5" />
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />

	<arg name="cam_image_topic" default="/camera/depth_registered/points" />
	<arg name="cam_info_topic" default="/camera/rgb/camera_info" />		
	<arg name="output_frame" default="/camera_depth_optical_frame" />

	<arg name="launch_kinect" default="true"/>

    <arg name="med_filt_size" default="10" />



	<arg name="bundle_files" default="/home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/cocoa_bowl.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/flour_bowl.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/sugar_bowl.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/butter_bowl.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/whisk.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/wooden_spoon.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/mixing_bowl_1.xml /home/brawner/workspace/src/baxter_h2r_packages/object_identifier/bundles/mixing_bowl_2.xml" />

	<include if="$(arg launch_kinect)" file="$(find openni_launch)/launch/openni.launch">
        <arg name="depth_registration" value="true" />
    </include>

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundles" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg med_filt_size) $(arg bundle_files)" />
</launch>
